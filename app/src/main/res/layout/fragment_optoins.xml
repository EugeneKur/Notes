<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptoinsFragment"
    android:orientation="vertical"
    android:layout_margin="2pt"
    android:clickable="true"
    android:background="#92A283">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_weight="3"
        android:text="Стиль шрифта"
        android:layout_width="@dimen/optionTextViewWidth"
        android:textSize="@dimen/optionTextSize"
        android:layout_height="wrap_content"
        android:textColor="@color/optionTextColor"
        android:textStyle="bold"
        >
    </TextView>
    <TextView
        android:gravity="end"
        android:layout_weight="2"
        android:text="Обычный"
        android:layout_width="@dimen/optionTextViewWidth"
        android:textSize="10pt"
        android:layout_height="wrap_content"
        android:textColor="@color/optionTextColor"
        android:textStyle="normal"
        >
    </TextView>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:text="Размер шрифта"
            android:layout_width="@dimen/optionTextViewWidth"
            android:textSize="@dimen/optionTextSize"
            android:layout_height="wrap_content"
            android:textColor="@color/optionTextColor"
            android:textStyle="bold"
            >
        </TextView>
        <TextView
            android:gravity="end"
            android:layout_weight="2"
            android:text="Средний"
            android:layout_width="@dimen/optionTextViewWidth"
            android:textSize="10pt"
            android:layout_height="wrap_content"
            android:textColor="@color/optionTextColor"
            android:textStyle="normal"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:text="Сортировка"
            android:layout_width="@dimen/optionTextViewWidth"
            android:textSize="@dimen/optionTextSize"
            android:layout_height="wrap_content"
            android:textColor="@color/optionTextColor"
            android:textStyle="bold"
            >
        </TextView>
        <TextView
            android:gravity="end"
            android:layout_weight="2"
            android:text="По дате"
            android:layout_width="@dimen/optionTextViewWidth"
            android:textSize="10pt"
            android:layout_height="wrap_content"
            android:textColor="@color/optionTextColor"
            android:textStyle="normal"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="3"
            android:text="Цветовая схема"
            android:layout_width="@dimen/optionTextViewWidth"
            android:textSize="@dimen/optionTextSize"
            android:layout_height="wrap_content"
            android:textColor="@color/optionTextColor"
            android:textStyle="bold"
            >
        </TextView>
        <TextView
            android:gravity="end"
            android:layout_weight="2"
            android:text="Ужасная"
            android:layout_width="@dimen/optionTextViewWidth"
            android:textSize="10pt"
            android:layout_height="wrap_content"
            android:textColor="@color/optionTextColor"
            android:textStyle="normal"
            >
        </TextView>
    </LinearLayout>


</LinearLayout>